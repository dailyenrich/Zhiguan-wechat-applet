page {
  width: 100%;
  height: 100%;
}

.body {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #e6caa5;
}

.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.xx-img {
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 10rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin: auto;
  padding-left: 50rpx;
  padding-right: 50rpx;
  text-align: justify;
}

.content-show{
  display: flex;
  flex-direction: column;
  margin: auto;
  padding-left: 50rpx;
  padding-right: 50rpx;
  text-align: justify;
}

.text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;

}